# Database
DATABASE_URL="postgresql://username:password@localhost:5432/party_tribe_db?schema=public"

# Optional: For development, you can use a local SQLite database instead
# DATABASE_URL="file:./dev.db"

# Prisma
PRISMA_CLIENT_LOG_LEVEL="info"

# Stripe (for payments)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Auth (example with NextAuth.js)
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# File Storage (example with AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-west-2"
AWS_S3_BUCKET="party-tribe-assets"

# Email Service (example with SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@partytribe.com"

# Maps API (Google Maps)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Environment
NODE_ENV="development"